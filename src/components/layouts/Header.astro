---
import NavLink from "@components/ui/NavLink.astro";
const baseURL = import.meta.env.BASE_URL;
---

<header class="border-b border-(--color-surface-stroke)">
  <nav
    class="mx-auto flex h-14 max-w-7xl items-center justify-between px-6"
    aria-label="Primary"
  >
    <span class="text-sm font-medium text-(--color-text-primary)S">
      orbit-ui
    </span>

    <ul class="flex items-center gap-6">
      <li>
        <NavLink href={`${baseURL}`} exact>Overview</NavLink>
      </li>
      <li>
        <NavLink href={`${baseURL}/tokens`}>Tokens</NavLink>
      </li>
      <li>
        <NavLink href={`${baseURL}/components`}>Components</NavLink>
      </li>
    </ul>
  </nav>
</header>
